import os
os.system("cls")
print(30*"=")
print("REKURSIF FAKTORIAL")

def faktorial(n):
    if n==1:
        return n
    else:
        return n*faktorial(n-1)
print(faktorial(4))

print(30*"=")
print("REKURSIF FIBONACCI")

def fibonacci(n):
    if n == 0:
        return 0
    elif n==1:
        return 1
    else:
        return fibonacci(n-1)+fibonacci(n-2)
for i in range(10):
    print(fibonacci(i))

print(30*"=")
print("REKURSIF PERPANGKATAN")

def perpangkatan(bilangan,pangkat):
    if pangkat>1:
        return bilangan*perpangkatan(bilangan,pangkat-1)
    else:
        return bilangan
print(perpangkatan(10,3))

print(30*"=")
print("REKURSIF PERPANGKATAN CARA BS")

def perpangkatan(bilangan,pangkat):
    if pangkat<=1:
        return bilangan
    else:
        return bilangan*perpangkatan(bilangan,pangkat-1)
print(perpangkatan(10,3))




